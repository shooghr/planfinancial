<%%= content_for :title do %>
  <%= plural_table_name.capitalize %>
<%% end %>

<div class="right_col" role="main">
  <div class="">
    <div class="page-title">
      <div class="title_left">
        <h3><%= plural_table_name.capitalize %></h3>
      </div>
    </div>

    <div class="title_right">
      <div class="col-md-2 col-sm-2 col-xs-12 form-group pull-right top_search">
        <div class="input-group">
          <%%= render partial: "botoes", locals: { lista: false } %>
        </div>
      </div>
    </div>

    </br>

    <div class="clearfix"></div>

    <div class="row">
      <div class="col-md-offset-2 col-md-8 col-sm-12 col-xs-12">
        <div class="x_panel">
          <div class="x_content">
            <table id="datatable" class="table table-striped table-bordered">
              <thead>
                <tr>
                  <% attributes.reject(&:password_digest?).each do |attribute| -%>
                    <th ><%%= sort_link @q, :<%= attribute.name %> %></th>
                  <% end -%>
                  <th class="text-right" width="70%">Ações</th>
                </tr>
              </thead>
              <tbody>
                <%% @<%= plural_table_name %>.each do |<%= singular_table_name %>| %>
                  <tr>
                    <% attributes.reject(&:password_digest?).each do |attribute| -%>
                      <td ><%%= <%= singular_table_name %>.<%= attribute.name %> %></td>
                    <% end -%>
                    <td class="text-right actions">
                      <%%= render partial:'layouts/botoes_index', locals: { controller: "<%= plural_table_name %>", object_id: <%= singular_table_name %>.id } %>
                    </td>
                  </tr>
                <%% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
