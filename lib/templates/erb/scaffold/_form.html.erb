<div class="right_col" role="main">
  <div class="">
    <div class="page-title">
      <div class="title_left">
        <h3><%%= action_name.titlecase %> <%= singular_table_name.titlecase %></h3>
      </div>

      <div class="title_right">
        <div class="col-md-3 col-sm-3 col-xs-12 form-group pull-right top_search">
          <div class="input-group">
            <%%= yield :botoes %>
          </div>
        </div>
      </div>
    </div>

    <div class="clearfix"></div>

    <div class="row">
      <div class="col-md-offset-3 col-md-6 col-sm-12 col-xs-12">
        <div class="x_panel">
          <div class="x_content">
            <br />
             <%%= form_for @<%= singular_table_name %>, html: { class: 'form-horizontal form-label-left' } do |f| %>
                  <%% if @<%= singular_table_name %>.errors.any? %>
                      <div id="error_explanation">
                        <h2><%%= pluralize(@<%= singular_table_name %>.errors.count, "erro") %> impediu que <%= singular_table_name %> fosse salvo:
                        </h2>
                        <ul>
                          <%% @<%= singular_table_name %>.errors.full_messages.each do |msg| %>
                            <li>
                              <%%= msg %>
                            </li>
                          <%% end %>
                        </ul>
                      </div>
                  <%% end %>
    
                  <% attributes.each do |attribute| -%>
                  
                      <div class="form-group">
                          <% if attribute.password_digest? -%>
                              <%%= f.label :password, class: 'control-label col-md-3 col-sm-3 col-xs-12' %>
                              <div class="col-md-6 col-sm-6 col-xs-12">
                                <%%= f.password_field :password, class: 'form-control col-md-7 col-xs-12' %>
                              </div>         
                      </div>

                      <div class="form-group">
                              <%%= f.label :password_confirmation, class: 'control-label col-md-3 col-sm-3 col-xs-12' %>
                              <div class="col-md-6 col-sm-6 col-xs-12">
                                <%%= f.password_field :password_confirmation, class: 'form-control col-md-7 col-xs-12' %>
                              </div>
                          <% else -%>
                              <%%= f.label :<%= attribute.name %>, class: 'control-label col-md-3 col-sm-3 col-xs-12' %>
                              <div class="col-md-6 col-sm-6 col-xs-12">
                                <%%= f.<%= attribute.field_type %> :<%= attribute.name %>, class: 'form-control col-md-7 col-xs-12' %>
                              </div>
                          <% end -%>
                      </div>
                  <% end -%>
                  </br>
                  <div class="form-group">
                      <%%=  button_tag(type: 'submit', class: "btn btn-primary") do %>
                        <i class="fa fa-check-circle"></i>
                        Salvar
                      <%% end %>

                      <%%= link_to  <%= index_helper %>_path, class: "btn btn-default" do %>
                        <i class="fa fa-times"></i>
                        Cancelar
                      <%% end %>
                  </div>
              <%% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>