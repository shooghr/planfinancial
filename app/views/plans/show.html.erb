  <%= content_for :title do %>
    Detalhes de plan
  <% end %>

<div class="right_col" role="main">
  <div class="">
    <div class="page-title">
      <div class="title_left">
        <h3>Detalhes da Plan</h3>
      </div>
    </div>

    <div class="title_right">
      <div class="col-md-3 col-sm-3 col-xs-12 form-group pull-right top_search">
        <div class="input-group">
          <%= render partial: "botoes" %>
        </div>
      </div>
    </div>

    <div class="clearfix"></div>

    <div class="row">
      <div class="col-md-6 col-sm-12 col-xs-12">
        <div class="x_panel">
          <div class="x_content">
            <br />
                            <div class="form-group">
                  <label class="col-md-2 control-label" for="firstname">Name</label>
                  <div class="innerAll half inline-block"><%= @plan.name %></div>
                </div>
                        <div class="separator"></div>
            <div class="form-actions">
              <%= link_to edit_plan_path(@plan), class: "btn btn-default" do %>
                <i class="fa fa-edit"></i>
                Modificar
              <% end %>

              <%= link_to plans_path, class: "btn btn-default" do %>
                <i class="fa fa-arrow-left"></i>
                Voltar
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
